import java.awt.Dimension;

import javax.swing.JFrame;

/**
 * Draws a sun, via the SunComponent and Sun class.
 * 
 * Constructs and display a JFrame
 * 
 */

public class SunViewer {

	public static final Dimension SUN_SIZE = new Dimension(750, 600);

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		JFrame frame = new JFrame();
		frame.setSize(SUN_SIZE);
		frame.setTitle("I see a sun! ");

		frame.add(new SunComponent());

		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.setVisible(true);
	}

}
